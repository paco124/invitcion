<style>
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
    font-family: 'Dancing Script', cursive;
  }

  body, html {
    width: 100%;
    height: 100%;
  }

  .container{
    position: relative;
  }

  .container img {
    position: relative;
    width: 100%;
    max-width: 100%;
    object-fit: contain;
    opacity: 0.5;
  }

  .contenido-central-countdown{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: white; /* Asegúrate de que el texto se vea sobre la imagen */
    text-align: center;
    z-index: 10;
  }

  .date {
    font-size: 2rem;
    color: #ffffffcc;
  }

  .countdown {
    font-size: clamp(1rem, 8vw, 4rem);
    font-weight: bold;
    color: white;
  }


</style>


<div class="container">
    <img src="/images/foto-1.jpeg"/>
    <div class="contenido-central-countdown">
        <p class="date">Junio 14</p>
        <p class="countdown" id="countdown">00:00:00</p>
    </div>
</div>


<script type="module">
  const targetDate = new Date('2025-06-14T00:00:00').getTime();

  function updateCountdown() {
    const now = new Date().getTime();
    const timeLeft = targetDate - now;

    const countdownEl = document.getElementById('countdown');
    if (!countdownEl) return;

    if (timeLeft <= 0) {
      countdownEl.textContent = "¡La fecha ha llegado!";
    } else {
      const days = Math.floor(timeLeft / (1000 * 60 * 60 * 24));
      const hours = Math.floor((timeLeft % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((timeLeft % (1000 * 60)) / 1000);
      countdownEl.textContent = `${days}d ${hours}h ${minutes}m ${seconds}s`;
    }
  }

  setInterval(updateCountdown, 1000);
</script>